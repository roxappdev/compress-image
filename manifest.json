{
  "manifest_version": 3,
  "name": "Image Compressor",
  "version": "1.0.0",
  "description": "Compress images (JPG, PNG, WebP), reduce image size",
  "icons": {
    "16": "icons/128.png",
    "32": "icons/128.png",
    "48": "icons/128.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "activeTab",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Open Image Compressor",
    "default_icon": {
      "16": "icons/128.png",
      "32": "icons/128.png",
      "48": "icons/128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Open Image Compressor sidebar"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["browser-image-compression.js"],
      "matches": ["<all_urls>"]
    }
  ]
}