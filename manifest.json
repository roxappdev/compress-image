{
  "manifest_version": 3,
  "name": "Image Compressor",
  "version": "1.0.0",
  "description": "Compress images using browser-image-compression library",
  "permissions": [
    "activeTab",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Open Image Compressor"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["browser-image-compression.js"],
      "matches": ["<all_urls>"]
    }
  ]
}